---
interface Props {
  unreadCount: number;
}

const { unreadCount } = Astro.props;
---

<!-- Notifications Section Header -->
<div class="mb-3 sm:mb-4 bg-[#4A5568] rounded-2xl p-4 sm:p-5">
  <div class="flex items-center justify-between gap-2 sm:gap-4">
    <div class="flex items-center gap-2 sm:gap-3">
      <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
      </svg>
      <h1 class="text-white text-base sm:text-lg font-medium whitespace-nowrap">
        Сповіщення (<span id="unreadCount">{unreadCount}</span>)
      </h1>
    </div>
    <button
      id="markAllReadButton"
      class="flex items-center gap-1.5 px-2.5 sm:px-4 py-1.5 sm:py-2 text-white text-xs sm:text-sm font-medium rounded-lg hover:bg-slate-600 focus:outline-none transition-colors disabled:opacity-50 disabled:cursor-not-allowed whitespace-nowrap flex-shrink-0"
      disabled={unreadCount === 0}
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
      </svg>
      Всі прочитані
    </button>
  </div>
</div>

<!-- Notifications List -->
<div id="notificationsList" class="space-y-2 sm:space-y-3">
  <slot />
</div>
